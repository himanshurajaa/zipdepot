{% if context == 'blog' %}
  {% assign title = blog.title %}
  {% assign image = section.settings.image %}
{% elsif context =='cart' %}
  {%- capture title -%}
    {{'cart.general.title' | t }}
  {%- endcapture -%}
  {% assign subtitle = section.settings.subtitle %}
  {% assign image = section.settings.image %}
{% elsif context == 'article' %}
  {% assign title = article.title %}
  {% assign image = article.image %}
{% elsif context == 'page' %}
  {% assign title = page.title %}

{% if page.handle == 'about-us' %} 
{% assign image = section.settings.about-us %}
{% elsif page.handle == 'affirm' %}
{% assign image = section.settings.affirm %}
{% elsif page.handle == 'contact-us' %} 
{% assign image = section.settings.contact-us %}
{% elsif page.handle == 'how-to-measure' %} 
{% assign image = section.settings.how-to-measure %}
{% elsif page.handle == 'foam-faqs' %} 
{% assign image = section.settings.foam-faqs %}
{% elsif page.handle == 'foam-faqs' %} 
{% assign image = section.settings.foam-faqs %}
{% elsif page.handle == 'inspiration' %} 
{% assign image = section.settings.inspiration %}
{% elsif page.handle == 'our-materials' %} 
{% assign image = section.settings.our-materials %}
{% elsif page.handle == 'commercial-buyer' %} 
{% assign image = section.settings.commercial-buyer %}
{% elsif page.handle == 'reviews' %} 
{% assign image = section.settings.reviews %}
{% elsif page.handle == 'payment-warranty' %} 
{% assign image = section.settings.payment-warranty %}
{% elsif page.handle == 'shipping' %} 
{% assign image = section.settings.shipping %}
{% elsif page.handle == 'terms-conditions' %} 
{% assign image = section.settings.terms-conditions %}
{% elsif page.handle == 'fabrics' %} 
{% assign image = section.settings.fabrics %}

{% endif %}

{% elsif context == 'contact' %}
  {% assign title = page.title %}
  {% assign image = section.settings.image %}
  {% assign subtitle = section.settings.subtitle %}
{% elsif context == 'collection' %}
  {% assign title = collection.title %}
  {% assign subtitle = section.settings.subtitle %}
  {%- if collection.image -%}
    {% assign image = collection.image %}
  {%- elsif section.settings.image -%}
    {% assign image = section.settings.image %}
  {%- else %}
    {% assign image = collection.products.first.featured_image %}
  {% endif %}
{% elsif context == '404' %}
  {% capture title %}
    {{ 'general.404.title' | t }}
  {% endcapture %}
  {% assign image = section.settings.image %}
{% endif %}

<section class="section
                {{ css_class }}
                is-width-{{ width }}">
  <div class="container
              {% if width == 'wide' %}
                equal-columns--outside-trim
              {% endif %}">
    <div class="banner__wrapper
                one-whole
                column
                dark-overlay-{{ section.settings.image_darken }}
                is-{{ banner_height }}">
      {% if image != blank %}
        {% render 'image-element',
                image: image,
                alt: image.alt,
                stretch_width: true
        %}
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      <div class="banner__content card-content">
        <div class="banner__text text-align-center">
          <h1 class="banner__heading title">{{ title }}</h1>
          {% if subtitle != blank %}
            <p class="banner__subheading subtitle">{{ subtitle }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
