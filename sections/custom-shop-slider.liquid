<style>
#shopify-section-{{ section.id }} .btn_wrap a,
#shopify-section-{{ section.id }} .shop_cstm_sec h2 {
    text-align: center;
    line-height: normal
}
#shopify-section-{{ section.id }} .btn_wrap a {
    color: var(--var-ffffff);
    text-align: center;
    font-family: Poppins;
    font-size: 16px;
    font-weight: 600;
    line-height: normal;
    border-radius: 4px;
    background: var(--var-de5956);
    padding: 15px 30px;
    display: inline-block;
    vertical-align: top;
    transition: all .3s ease-in-out;
}
#shopify-section-{{ section.id }} .btn_wrap a:hover,
#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .btn_wrap a:hover {
    background: #b02a26 !important
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .btn_wrap a:hover {
    border-color: #b02a26
}

#shopify-section-{{ section.id }} .shop_cstm_sec h2 {
    color: var(--var-000000);
    font-size: 36px;
    font-weight: 300;
    letter-spacing: -1.08px;
    margin-bottom: 25px
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper img.main_img {
    height: 515px;
    width: 100%;
    object-fit: cover
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .slide_item {
    border-radius: 20px;
    overflow: hidden;
    position: relative
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .slide_item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0, rgb(0, 0, 0, .4) 100%)
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .item_content {
    display: flex;
    flex-direction: column;
    gap: 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    text-align: center;
    padding: 60px 20px 20px
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .item_content h3 {
    color: var(--var-ffffff);
    text-align: center;
    font-size: 50px;
    font-weight: 700;
    line-height: normal
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .btn_wrap a {
    background: 0 0;
    border: 1px solid var(--var-ffffff);
    width: 100%;
    max-width: 308px;
    padding: 13px 30px
}

#shopify-section-{{ section.id }} .shop_cstm_sec {
    overflow: hidden
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-carousel .owl-stage-outer {
    overflow: visible
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper {
    position: relative
}

#shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper::before {
    position: absolute;
    content: '';
    top: 0;
    bottom: 0;
    right: 100%;
    left: -100vw;
    background-color: var(--var-ffffff);
    z-index: 2
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    max-width: 250px
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-nav button {
    background-image: url(https://zipcushions.com/cdn/shop/files/prev.svg?v=1731064782) !important;
    width: 32px;
    height: 32px;
    background-repeat: no-repeat !important;
    font-size: 0 !important;
    background-size: cover !important
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-nav button.owl-next {
    transform: scaleX(-1)
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-dots {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 10px;
    max-width: 140px;
    margin: auto;
    display: flex;
    justify-content: center;
    overflow: hidden
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-dots button span {
    border: 1px solid #c1c1c1;
    width: 12px;
    height: 12px;
    border-radius: 100%;
    display: block
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-dots button {
    margin: 0 4px
}

#shopify-section-{{ section.id }} .shop_cstm_sec .owl-dots button.active span {
    background-color: #c1c1c1
}


@media(max-width:1300px) {
    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper img.main_img {
        height: 440px
    }
}

@media(max-width:1200px) {
    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .item_content h3 {
        font-size: 36px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper img.main_img {
        height: 400px
    }
}

@media(max-width:1024px) {

    #shopify-section-{{ section.id }} .shop_cstm_sec h2,
    #shopify-section-{{ section.id }} .shopify-section--text-with-icons:has(.text-with-icons) .section-stack h2 {
        font-size: 32px;
        line-height: 40px;
        letter-spacing: 0
    }
}

@media(max-width:767px) {

    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper img.main_img {
        height: 350px
    }
    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .btn_wrap a {
        padding: 10px 20px
    }
}

@media(max-width:575px) {

    #shopify-section-{{ section.id }} .shop_cstm_sec .owl-nav {
        padding-left: 50px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec h2,
    #shopify-section-{{ section.id }} .shopify-section--text-with-icons:has(.text-with-icons) .section-stack h2 {
        margin-bottom: 20px;
        font-size: 28px;
        line-height: 38px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper img.main_img {
        height: 330px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec .owl-carousel {
        padding-right: 50px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .item_content h3 {
        font-size: 32px
    }

    #shopify-section-{{ section.id }} .shop_cstm_sec .slider_wrapper .item_content {
        padding: 30px 20px 20px
    }
}  
#shopify-section-{{ section.id }} .container {
    --container-inner-width: min((100vw - var(--scrollbar-width, 0px)) - var(--container-gutter) * 2, var(--container-max-width));
    --container-outer-width: calc(((100vw - var(--scrollbar-width, 0px)) - var(--container-inner-width)) / 2);
    margin-inline-start: max(var(--container-gutter),50% - var(--container-max-width) / 2);
    margin-inline-end: max(var(--container-gutter),50% - var(--container-max-width) / 2);
    display: block;
}  
#shopify-section-{{ section.id }} .owl-carousel .owl-dots.disabled, 
#shopify-section-{{ section.id }} .owl-carousel .owl-nav.disabled {
    display: none;
}  
#shopify-section-{{ section.id }} .owl-carousel .owl-nav button.owl-next, 
#shopify-section-{{ section.id }} .owl-carousel .owl-nav button.owl-prev, 
#shopify-section-{{ section.id }} .owl-carousel button.owl-dot {
    background: 0 0;
    color: inherit;
    border: none;
    padding: 0!important;
    font: inherit;
} 
</style>
<div class="shop_cstm_sec">
    <div class="container">
        <div class="main_wrapper">

            <h2>{{ section.settings.section_title }}</h2>
            <div class="slider_wrapper">
                <div class="owl-carousel owl-theme">
                    {% for block in section.blocks %}
                        <div class="item">
                            <div class="slide_item {% if forloop.index == 1 %} active{% endif %} ">
                                <img class="main_img" src="{{ block.settings.image | img_url: 'master' }}" alt="">
                                <div class="item_content">
                                    <h3>{{ block.settings.title }}</h3>
                                    <div class="btn_wrap">
                                        <a href="{{ block.settings.url }}">EXPLORE NOW</a>
                                    </div>      
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
jQuery('.shop_cstm_sec .owl-carousel').owlCarousel({
    loop: false,
    margin: 20,
    nav: true,
    dots: true,
    responsive:{
        0:{
            items:1
        },
        576:{
            items:2
        },
        1025:{
            items:3
        }
    }
});  
</script>
{% schema %}
{
    "name": "Custom Shop Slider",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "Shop Custom Covers, Fabrics, and Cushions."
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
                },
                {
                "type": "text",
                "id": "title",
                "label": "Title"
                },
                {
                "type": "url",
                "id": "url",
                "label": "URL"
                }

            ]
        }
    ],
    "presets": [
        {
            "category": "Custom",
            "name": "Custom Shop Slider"
        }
    ]
    
}
{% endschema %}