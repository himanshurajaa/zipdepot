<style>
#shopify-section-{{ section.id }} .container {
    --container-inner-width: min((100vw - var(--scrollbar-width, 0px)) - var(--container-gutter) * 2, var(--container-max-width));
    --container-outer-width: calc(((100vw - var(--scrollbar-width, 0px)) - var(--container-inner-width)) / 2);
    margin-inline-start: max(var(--container-gutter),50% - var(--container-max-width) / 2);
    margin-inline-end: max(var(--container-gutter),50% - var(--container-max-width) / 2);
}  
#shopify-section-{{ section.id }} .fabric_banner,
#shopify-section-{{ section.id }} .fabric_banner .main_wrapper {
    position: relative
}

#shopify-section-{{ section.id }} .fabric_banner .container {
    position: relative;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 80px;
    text-align: center;
    min-height: 300px;
    display: flex;
    align-items: center;
    background-image: url(//zipcushions.com/cdn/shop/files/sectional_by_the_pool_1_1.jpg?v=1734069722&width=1080);
    border-radius: 20px;
    overflow: hidden
}

#shopify-section-{{ section.id }} .fabric_banner .container::before {
    position: absolute;
    content: "";
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(90deg, rgba(0, 0, 0, .6) 0, rgba(0, 0, 0, 0) 100%)
}

#shopify-section-{{ section.id }} .fabric_banner h1 {
    color: #fff;
    font-size: 60px;
    font-weight: 700;
    line-height: 66px;
    letter-spacing: -3px;
    max-width: 800px
}

@media(max-width:1024px) {
    #shopify-section-{{ section.id }} .fabric_banner h1 {
        font-size: 46px;
        line-height: 56px;
        letter-spacing: 0
    }

    #shopify-section-{{ section.id }} .fabric_banner .container {
        padding: 40px
    }
}

@media(max-width:767px) {
    #shopify-section-{{ section.id }} .fabric_banner h1 {
        font-size: 36px;
        line-height: 46px
    }

    #shopify-section-{{ section.id }} .fabric_banner .container {
        min-height: 250px
    }
}

@media(max-width:575px) {
    #shopify-section-{{ section.id }} .fabric_banner .container::before {
        background: linear-gradient(90deg, rgba(0, 0, 0, .5) 0, rgba(0, 0, 0, .3) 100%)
    }
    #shopify-section-{{ section.id }} .fabric_banner {
        padding-top: 20px
    }

    #shopify-section-{{ section.id }} .fabric_banner h1 {
        font-size: 40px;
        line-height: 50px
    }
}  
</style>
<section class="fabric_banner">
    <div class="container" style="background-image: url({{ section.settings.hero_bg |  image_url: width: 1080 }});">
        <div class="main_wrapper">
            <div class="inner_wrap">
                {% if section.settings.hero_title != blank %}
                    <h1>{{ section.settings.hero_title }}</h1>
                {% endif %}
                {% if section.settings.hero_cta_text != blank %}
                    <div class="btn_wrap">
                        <a href="{{ section.settings.hero_cta_link }}">{{ section.settings.hero_cta_text }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "New Hero",
        "settings": [
            {
                "type": "text",
                "id": "hero_title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "hero_cta_text",
                "label": "Button Title"
            },
            {
                "type": "url",
                "id": "hero_cta_link",
                "label": "Button Link"
            },
            {
                "type": "image_picker",
                "id": "hero_bg",
                "label": "Background"
            }
        ],
        "presets":[
            {
                "name": "New Hero"
            }
        ]
    }
{% endschema %}