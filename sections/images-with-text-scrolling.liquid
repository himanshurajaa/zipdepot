<script>
jQuery(document).ready(function() {
    jQuery(window).on('scroll', function(){
        let scroll_amnt = jQuery(window).scrollTop();
        let scrolled_count = jQuery('.images-scrolling-desktop__media-wrapper .is-visible').length;
        jQuery('.images-scrolling-desktop__media-wrapper .counter_wrap ul li').removeClass('active');
        if(scrolled_count >= 1){
            jQuery('.images-scrolling-desktop__media-wrapper .counter_wrap ul li').eq(scrolled_count-1).addClass('active');
        }else{
            jQuery('.images-scrolling-desktop__media-wrapper .counter_wrap ul li').eq(0).addClass('active');
        }
    });
});  
</script>
